@model Modelo.TIPO_USUARIO
@{
    ViewBag.Title = (Model.IDTIPOUSUARIO > 0 ? Model.NOMBRE : "Nuevo Tipo");
}

<ol class="breadcrumb">
    <li><a href="~/TipoUsuario/">Tipos de Usuario</a></li>
    <li class="active">@(Model.IDTIPOUSUARIO > 0 ? Model.NOMBRE : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar", "TipoUsuario", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.IDTIPOUSUARIO);
    <div>
        <div class="form-group">
            @Html.LabelFor(x => x.IDTIPOUSUARIO)
            @Html.TextBoxFor(x => x.IDTIPOUSUARIO, new { @class = "form-control", disabled = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NOMBRE)
            @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "label label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ESTADO)
            <select name="estado" class="form-control">
                <option @(Model.ESTADO == "A" ? "select" : "") value="A">Activo</option>
                <option @(Model.ESTADO == "I" ? "select" : "") value="I">Inactivo</option>
            </select>
        </div>
    </div>

    <div class="text-right">
        <input type="submit" class="btn btn-primary" value="Guardar" />
        <a href="~/TipoUsuario/" class="btn btn-danger">Cancelar</a>
    </div>
}