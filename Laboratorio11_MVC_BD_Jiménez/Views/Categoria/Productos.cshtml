@model Modelo.CATEGORIA
@{ 
    ViewBag.Title = "Ver";
}

<div class="page-header">
    <h1>Productos</h1>
    <ol class="breadcrumb">
        <li><a href="~/Categoria/">Categorias</a></li>
        <li class="active">@Model.NOMBRE</li>
    </ol>
    <div class="panel">
        <div class="panel-heading">
            <h3>Información de la Categoría</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>@Model.IDCATEGORIA</dd>
                <dt>CATEGORIA</dt>
                <dd>@Model.NOMBRE</dd>
                <dt>DESCRIPCION</dt>
                <dd>@Model.DESCRIPCION</dd>
                <dt>ESTADO</dt>
                <dd>@Model.ESTADO</dd>
            </dl>
        </div>
    </div>

    <div class="panel">
        <div class="panel-heading">
            <h3>Productos</h3>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.PRODUCTO)
                {
                    <tr>
                        <td>@p.IDPRODUCTO</td>
                        <td>@p.NOMBRE</td>
                        <td>@p.DESCRIPCION</td>
                        <td>@p.PRECIO</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>