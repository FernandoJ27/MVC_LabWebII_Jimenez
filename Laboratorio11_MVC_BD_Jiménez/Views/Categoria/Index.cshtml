@model List<Modelo.CATEGORIA>
@{
    ViewBag.Title = "Categorías";
 }

@using (Html.BeginForm("Index", "Categoria", FormMethod.Post, new { criterio = "frm-buscar" }))
{
    <div class="row">
        <div class="col-sm-8 text-left">
            @Html.Label("Buscar: ")
            @Html.TextBox("criterio")
            <button type="submit"><i class="material-icons" style="font-size:20px; color:#2a5a7d">search</i></button>
        </div>

        <div class="col-sm-4">
            <a href="~/Categoria/Gestionar/" class="btn btn-default pull-right"><i class="material-icons" style="color:#56904b">add</i>Nueva</a><br />
        </div>
    </div>
}
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.IDCATEGORIA</td>
                <td>@m.NOMBRE</td>
                <td>@m.DESCRIPCION</td>
                <td>@(m.ESTADO == "A" ? "Activo" : "Inactivo")</td>
                <td>
                    <div class="pull-right">
                        <a href="~/Categoria/Productos/@m.IDCATEGORIA"><i class="material-icons" style="color:#2a5a7d; font-size:40px">visibility</i></a>
                        <a href="~/Categoria/Gestionar/@m.IDCATEGORIA"><i class="material-icons" style="color:#8e9834; font-size:40px">edit</i></a>
                        <a onclick="return confirm('¿Está seguro de eliminar el registro?');" href="~/Categoria/Eliminar/@m.IDCATEGORIA">
                            <i class="material-icons" style="color:#932a2a; font-size:40px">delete_forever</i>
                        </a>
                    </div>
                </td>
            </tr>
            }
    </tbody>
</table>
