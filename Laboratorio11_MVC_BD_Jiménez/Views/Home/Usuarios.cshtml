@model List<Modelo.USUARIO>
@{
    ViewBag.Title = "Usuario";
 }

<form action="">
    <div class="row">
        <div class="col-xs-5">
            <input type="search" class="form-control" placeholder="Search">
        </div>
        <div class="col-xs-3">
            <input type="submit" class="btn btn-default" value="Buscar" />
        </div>
        <div class="col-xs-4">
            <a href="~/Home/AgregarEditar/" class="btn btn-default pull-right">Nueva Categoría</a><br />
        </div>
    </div>
</form>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>E-mail</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.IDUSUARIO</td>
                <td>@m.NOMBRE @m.APELLIDOS</td>
                <td>@m.EMAIL</td>
                <td>@(m.ESTADO == "A" ? "Activo" : "Inactivo")</td>
                <td>
                    <div class="pull-right">
                        <a href="~/Home/CategoriaProductos/@m.IDUSUARIO"><i class="material-icons" style="color:#2a5a7d; font-size:40px">visibility</i></a>
                        <a href="~/Home/AgregarEditar/@m.IDUSUARIO"><i class="material-icons" style="color:#8e9834; font-size:40px">edit</i></a>
                        <a onclick="return confirm('¿Está seguro de eliminar el registro?');" href="~/Home/Eliminar/@m.IDUSUARIO">
                            <i class="material-icons" style="color:#932a2a; font-size:40px">delete_forever</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>