@model Modelo.USUARIO
@{ 
    ViewBag.Title = (Model.IDUSUARIO != "" ? Model.NOMBRE : "Nuevo Usuario");
}

<ol class="breadcrumb">
    <li><a href="~/Usuario/">Usuario</a></li>
    <li class="active">@(Model.IDUSUARIO != "" ? Model.NOMBRE : "Nuevo Registro")</li>
</ol>

@using (Html.BeginForm("Guardar","Usuario", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.IDUSUARIO);
    <div>
        <div class="form-group">
            @Html.LabelFor(x => x.IDUSUARIO)
            @Html.TextBoxFor(x => x.IDUSUARIO, new { @class = "form-control",})
            @Html.ValidationMessageFor(x => x.IDUSUARIO, null, new { @class = "label label-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.IDTIPOUSUARIO)
            @Html.TextBoxFor(x => x.IDTIPOUSUARIO, new { @class = "form-control", })
            @Html.ValidationMessageFor(x => x.IDTIPOUSUARIO, null, new { @class = "label label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.NOMBRE)
            @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "label label-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.EMAIL)
            @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "label label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.PASSWORD)
            @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "label label-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.ESTADO)
            <select name="estado" class="form-control">
                <option @(Model.ESTADO == "A" ? "select" : "") value="A">Activo</option>
                <option @(Model.ESTADO == "I" ? "select" : "") value="I">Inactivo</option>
            </select>
        </div>
    </div>

    <div class="text-right">
        <input type="submit" class="btn btn-primary" value="Guardar"/>
        <a href="~/Usuario/" class="btn btn-danger">Cancelar</a>
    </div>
}